<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageType>Template</PackageType>
    <PackageId>Umbraco.Packages.Templates</PackageId>

    <TargetFramework>net472</TargetFramework>

    <Title>Umbraco Package Templates</Title>
    <Description>Templates to use when creating Umbraco packages</Description>
    <Authors>The Umbraco Community</Authors>
    <PackageProjectUrl>https://github.com/umbraco/Umbraco.Package.Templates</PackageProjectUrl>
    <PackageTags>umbraco</PackageTags>
    <RepositoryUrl>https://github.com/umbraco/Umbraco.Package.Templates</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>

    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders> 
    <NoDefaultExcludes>true</NoDefaultExcludes>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="ProjectTemplates\**\*;ItemTemplates\**\*" Exclude="**\bin\**;**\obj\**;**\.vs\**;**\umbraco\**;**\packages\**" />
    <Compile Remove="**\*" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="ItemTemplates\UIExamples\App_Plugins\UIExamples\exampleSection.controller.js" />
    <None Remove="ItemTemplates\UIExamples\App_Plugins\UIExamples\exampleSection.html" />
    <None Remove="ItemTemplates\UIExamples\App_Plugins\UIExamples\Lang\en.xml" />
    <None Remove="ItemTemplates\UIExamples\App_Plugins\UIExamples\package.manifest" />
  </ItemGroup>
</Project>