{
  "$schema": "https://json.schemastore.org/template",
  "author": "UmbracoPackageTeam",
  "classifications": [ 
    "Web", 
    "Umbraco", 
    "v8" 
  ],
  "tags": {
    "language": "C#",
    "type": "project"
  },

  "identity": "Umbraco.Template.Package",

  "name": "Empty Umbraco Package",
  "shortName": "umbraco-v8-package",
  "description": "Basic umbraco package project template",

  "sourceName": "UmbracoPackage.1",

  "preferNameDirectory": true,

  "sources": [
    {
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "**/.vs/**",
        "**/packages/**",
        "**/node_modules/**",
        "**/umbraco/**"
      ],
      "modifiers": [
        {
          "condition": "(!GitHub)",
          "exclude": [
            ".github/**/*"
          ]
        },
        {
          "condition": "(!TestSite)",
          "exclude": [
            ".website/**/*"
          ]
        },
        {
          "condition": "(!dashboard)",
          "exclude": [
            "**/dashboard/**"
          ]
        },
        {
          "condition": "(!propertyEditory)",
          "exclude": [
            "**/property/**"
          ]
        }
      ]
    }
  ],

  "symbols": { 
    "siteGuid" : {
       "type": "generated",
       "generator": "guid",
       "replaces": "004F67C2-9A9E-49C3-8925-A55099E47D41",
       "parameters": {
         "format": "D"
       }
    },
    "sitePort" : {
      "type" : "generated",
      "generator": "port",
      "replaces": "44398",
      "parameters": {
        "high" :44399,
        "low": 44300
      }
    },
    "dashboard" : 
    {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Include template code for a dashboard"
    },
    "propertyEditor" :
    {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Include template code for a property Type Editor"
    },
    "github" :
    {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include the GitHub Actions in the project."
    },
    "testsite": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include the test umbraco site project in .website"
    },
    "ignore" :
    {
      "type": "generated",
      "generator": "constant",
      "description" : "puts .website in the gitignore",
      "parameters": {
        "value":".website"
      },
      "replaces":"# .website #"
    },
    "restore" :{
      "type": "parameter",
      "datatype":"bool",
      "defaultValue": "false",
      "description": "Restore NuGet and NPM Modules"
    }
    
  },


  "postActions": [
    {
      "condition": "(Restore)",
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "description": "Restore Nuget Packages Required by this project.",
      "manualInstructions": [
        { "text": "Run 'dotnet restore'" }
      ],
      "continueOnError": true
    },
    {
      "condition": "(Restore)",
      "description": "Run npm install",
      "manualInstructions": [{"text": "Run 'npm install'"}],
      "actionId" :"3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "cmd.exe", 
        "args": "/c npm install"
      }
    }
  ]
}
